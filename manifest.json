{
  "manifest_version": 2,
  "name": "JP Spam Reporter",
  "version": "1.0.15",
  "applications": {
    "gecko": {
      "id": "jp-spam-reporter@example.local",
      "strict_min_version": "102.0"
    }
  },
  "description": "Check URLs in a message and prepare a report email with .eml attachment for Japanese abuse desks.",
  "permissions": [
    "messagesRead",
    "accountsRead",
    "compose",
    "menus",
    "downloads",
    "storage",
    "notifications",
    "https://www.virustotal.com/*",
    "https://safebrowsing.googleapis.com/*",
    "https://checkurl.phishtank.com/*",
    "http://*/*","https://*/*"
  ],
  "background": {
    "scripts": [
      "utils/auth.js",
      "utils/url.js",
      "background.js"
    ]
  },
  "message_display_action": {
    "default_title": "Check & Report",
    "default_popup": ""
  },
  "options_ui": { "page": "options.html", "open_in_tab": true }
}
