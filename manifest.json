{
  "manifest_version": 2,
  "name": "JP Spam Reporter",
  "version": "2.0.0",
  "applications": {
    "gecko": {
      "id": "jp-spam-reporter@magical-soft.jp",
      "strict_min_version": "102.0"
    }
  },
  "icons": {
    "16": "icons/jp-spam-reporter-16.png",
    "32": "icons/jp-spam-reporter-32.png",
    "48": "icons/jp-spam-reporter-48.png",
    "128": "icons/jp-spam-reporter-128.png"
  },
  "description": "Check URLs in a message and prepare a report email with .eml attachment for Japanese abuse desks.",
  "permissions": [
    "storage", 
    "notifications", 
    "tabs", 
    "webRequest", 
    "webRequestBlocking", 
    "messagesRead", 
    "messagesModify", 
    "accountsRead"
  ],
  "host_permissions": [
    "https://www.virustotal.com/*",
    "https://checkurl.phishtank.com/*",
    "https://safebrowsing.googleapis.com/*"
  ],
  "content_security_policy": "default-src 'self'; img-src 'self' data:; style-src 'self' 'unsafe-inline'; script-src 'self'; object-src 'self'; connect-src 'self' https://www.virustotal.com https://checkurl.phishtank.com https://safebrowsing.googleapis.com;",
  "background": {
    "scripts": [
      "utils/auth.js",
      "utils/url.js",
      "urlSanitize.js",
      "urlCheck.js",
      "riskCheck.js",
      "background.js"
    ]
  },
  "message_display_action": {
    "default_title": "Check & Report",
    "default_icon": {
      "16": "icons/jp-spam-reporter-16.png",
      "32": "icons/jp-spam-reporter-32.png",
      "48": "icons/jp-spam-reporter-48.png"
    }
  },
  "options_ui": { "page": "options.html", "open_in_tab": true }
}
